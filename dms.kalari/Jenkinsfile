pipeline {
    agent any
    
    tools {
        git 'Default'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                     url: 'https://github.com/noufalnow/csol-webproject.git',
                     credentialsId: '' // Leave empty if public repo, otherwise use your credentials ID
            }
        }

        stage('Build & Deploy') {
            steps {
                dir('dms.kalari') {
                    sh 'sudo systemctl stop kalari-app || true'
                    sh 'mvn clean package -DskipTests'
                    sh 'sudo systemctl start kalari-app'
                    sh 'sleep 5'
                    sh 'sudo systemctl status kalari-app'
                }
            }
        }

        stage('Archive Artifact') {
            steps {
                dir('dms.kalari') {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }
}
