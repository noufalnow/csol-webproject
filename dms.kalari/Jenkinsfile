pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Deploy') {
            steps {
                dir('dms.kalari') {
                    // Stop service
                    sh 'sudo systemctl stop kalari-app || true'

                    // Build JAR
                    sh 'mvn clean package -DskipTests'

                    // Start service with new JAR
                    sh 'sudo systemctl start kalari-app'
                }
            }
        }

        stage('Archive Artifact') {
            steps {
                dir('dms.kalari') {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        // Optional testing
        /*
        stage('Test') {
            steps {
                dir('dms.kalari') {
                    sh 'mvn test'
                }
            }
        }
        */
    }
}
